<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE beans PUBLIC "-//SPRING//DTD BEAN//EN" "http://www.springframework.org/dtd/spring-beans.dtd">

<beans>

	<import resource="import1.xml"/>
	<import resource="classpath:org/springframework/context/support/import2.xml"/>

	<bean class="com.example.spring.provider.spring1_5.context.support.FactoryBeanAndApplicationListener"/>

	<bean name="service" class="com.example.spring.provider.spring1_5.context.support.Service">
		<property name="resources"><value>/org/springframework/context/support/context*.xml</value></property>
  </bean>

	<bean name="transactionManager" class="com.example.spring.provider.spring1_5.transaction.CountingTxManager"/>

	<bean name="wrappedAssemblerOne" class="com.example.spring.provider.spring1_5.transaction.interceptor.TransactionProxyFactoryBean">
		<property name="transactionManager"><ref bean="transactionManager"/></property>
		<property name="target"><ref bean="assemblerOne"/></property>
		<property name="proxyTargetClass"><value>true</value></property>
		<property name="transactionAttributes">
			<props>
				<prop key="test">PROPAGATION_REQUIRED</prop>
			</props>
		</property>
	</bean>

	<bean name="wrappedAssemblerTwo" class="com.example.spring.provider.spring1_5.transaction.interceptor.TransactionProxyFactoryBean">
		<property name="transactionManager"><ref bean="transactionManager"/></property>
		<property name="target"><ref bean="assemblerTwo"/></property>
		<property name="proxyTargetClass"><value>true</value></property>
		<property name="transactionAttributes">
			<props>
				<prop key="test">PROPAGATION_REQUIRED</prop>
			</props>
		</property>
	</bean>

</beans>
