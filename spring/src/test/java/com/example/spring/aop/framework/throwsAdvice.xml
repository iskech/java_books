<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE beans PUBLIC "-//SPRING//DTD BEAN//EN" "http://www.springframework.org/dtd/spring-beans.dtd">

<!--
	Tests for throws advice.
	$Id: throwsAdvice.xml,v 1.4 2005/02/27 19:21:32 jhoeller Exp $
-->

<beans>

	<!-- Simple target -->
	<bean id="target" class="com.example.spring.provider.spring1_5.aop.framework.adapter.ThrowsAdviceInterceptorTests$Echo">
	</bean>
	
	<bean id="nopInterceptor" class="com.example.spring.provider.spring1_5.aop.interceptor.NopInterceptor">
	</bean>
	
	<bean id="countingBeforeAdvice"
		class="com.example.spring.provider.spring1_5.aop.framework.CountingBeforeAdvice"
	/>
	
	<bean id="throwsAdvice" 
		class="com.example.spring.provider.spring1_5.aop.framework.adapter.ThrowsAdviceInterceptorTests$MyThrowsHandler">
	</bean>
	

	<bean id="throwsAdvised"
		class="com.example.spring.provider.spring1_5.aop.framework.ProxyFactoryBean"
	> 
			<property name="interceptorNames">
				<value>countingBeforeAdvice,nopInterceptor,throwsAdvice,target</value>
			</property>
	</bean>
	
</beans>		
	
	