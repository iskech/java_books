<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE beans PUBLIC "-//SPRING//DTD BEAN//EN" "http://www.springframework.org/dtd/spring-beans.dtd">

<!--
	Tests for independent prototype behaviour.
-->

<beans>

	<bean id="nopInterceptor" class="com.example.spring.provider.spring1_5.aop.interceptor.NopInterceptor">
	</bean>
	
	<bean id="serializableNopInterceptor" class="com.example.spring.provider.spring1_5.aop.interceptor.SerializableNopInterceptor">
	</bean>
	
	<bean id="serializableSingleton" 
			class="com.example.spring.provider.spring1_5.aop.framework.ProxyFactoryBean"
	>	
		<property name="interceptorNames"><value>serializableNopInterceptor</value></property>	
		<property name="proxyInterfaces"><value>com.example.spring.provider.spring1_5.beans.Person</value></property>
		<property name="target">
			<bean class="com.example.spring.provider.spring1_5.beans.SerializablePerson">
				<property name="name"><value>serializableSingleton</value></property>
			</bean>
		</property>
	</bean>
	
	
	<bean id="prototypeTarget" class="com.example.spring.provider.spring1_5.beans.SerializablePerson">
		<property name="name"><value>serializablePrototype</value></property>
	</bean>

	<bean id="serializablePrototype" 
			class="com.example.spring.provider.spring1_5.aop.framework.ProxyFactoryBean"
	>	
		<property name="interceptorNames"><value>serializableNopInterceptor,prototypeTarget</value></property>		
		<property name="proxyInterfaces"><value>com.example.spring.provider.spring1_5.beans.Person</value></property>
		
		<property name="singleton"><value>false</value></property>
	</bean>
	
	
	<bean id="interceptorNotSerializableSingleton" 
			class="com.example.spring.provider.spring1_5.aop.framework.ProxyFactoryBean"
	>	
		<property name="interceptorNames"><value>nopInterceptor</value></property>		
		<property name="target">
			<bean class="com.example.spring.provider.spring1_5.beans.SerializablePerson" />
		</property>
	</bean>
	
</beans>		
	
	