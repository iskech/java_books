<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE beans PUBLIC "-//SPRING//DTD BEAN//EN" "http://www.springframework.org/dtd/spring-beans.dtd">

<!--
	Tests for misconfiguring the proxy factory bean using a target source in the
	interceptor list as well as set by the targetSource property
-->	

<beans>
	
	<bean id="eveTargetSource" class="com.example.spring.provider.spring1_5.aop.target.SingletonTargetSource">
		<constructor-arg>
			<bean class="com.example.spring.provider.spring1_5.beans.TestBean">
				<property name="name"><value>Eve</value></property>
			</bean>
		</constructor-arg>
	</bean>
	
	<bean id="adam" class="com.example.spring.provider.spring1_5.beans.TestBean">
		<property name="name"><value>Adam</value></property>
	</bean>
	
	<bean id="adamTargetSource" class="com.example.spring.provider.spring1_5.aop.target.SingletonTargetSource">
		<constructor-arg>
			<ref local="adam"/>
		</constructor-arg>
	</bean>
	
	<bean id="countingBeforeAdvice"
		class="com.example.spring.provider.spring1_5.aop.framework.CountingBeforeAdvice"
	/>
	
	<bean id="doubleTarget"
		class="com.example.spring.provider.spring1_5.aop.framework.ProxyFactoryBean">
		<property name="proxyInterfaces"><value>com.example.spring.provider.spring1_5.beans.ITestBean</value></property>
		<!-- this is the one used and NOT the one set by targetSource -->
		<property name="interceptorNames"><value>countingBeforeAdvice,adamTargetSource</value></property>
		
		<property name="targetSource"><ref bean="eveTargetSource"/></property>
	</bean>
	
	<!-- but this is also possible -->
	<bean id="arbitraryTarget"
		class="com.example.spring.provider.spring1_5.aop.framework.ProxyFactoryBean">
		<property name="proxyInterfaces"><value>com.example.spring.provider.spring1_5.beans.ITestBean</value></property>
		<!-- this is the one used and NOT the one set by targetSource -->
		<property name="interceptorNames"><value>adam</value></property>
		<property name="targetSource"><ref local="eveTargetSource"/></property>
	</bean>

		
</beans>		
	
	