<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE beans PUBLIC "-//SPRING//DTD BEAN//EN" "http://www.springframework.org/dtd/spring-beans.dtd">

<beans>

	<bean id="testBeanTarget" class="com.example.spring.provider.spring1_5.aop.framework.PrototypeTargetTests$TestBeanImpl"
		  singleton="false"/>

	<bean id="testInterceptor" class="com.example.spring.provider.spring1_5.aop.framework.PrototypeTargetTests$TestInterceptor"/>

	<bean id="testBeanPrototype" class="com.example.spring.provider.spring1_5.aop.framework.ProxyFactoryBean">
		<property name="proxyInterfaces">
			<value>com.example.spring.provider.spring1_5.aop.framework.PrototypeTargetTests$TestBean</value>
		</property>
		<property name="singleton">
			<value>false</value>
		</property>
		<property name="interceptorNames">
			<list>
				<value>testInterceptor</value>
				<value>testBeanTarget</value>
			</list>
		</property>
	</bean>

	<bean id="testBeanSingleton" class="com.example.spring.provider.spring1_5.aop.framework.ProxyFactoryBean">
		<property name="proxyInterfaces">
			<value>com.example.spring.provider.spring1_5.aop.framework.PrototypeTargetTests$TestBean</value>
		</property>
		<property name="singleton">
			<value>true</value>
		</property>
		<property name="interceptorNames">
			<list>
				<value>testInterceptor</value>
				<value>testBeanTarget</value>
			</list>
		</property>
	</bean>

</beans>
