<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE beans PUBLIC "-//SPRING//DTD BEAN//EN" "http://www.springframework.org/dtd/spring-beans.dtd">

<beans>
	<bean id="testBeanTarget" class="com.example.spring.provider.spring1_5.beans.TestBean"/>
	
	<bean id="simpleBeforeAdvice" class="com.example.spring.provider.spring1_5.aop.SimpleBeforeAdviceImpl"/>
	
	<bean id="simpleBeforeAdviceAdvisor"
		class="com.example.spring.provider.spring1_5.aop.support.DefaultPointcutAdvisor">
		<constructor-arg><ref local="simpleBeforeAdvice"/></constructor-arg>
   	</bean>
   	
   	<bean id="testBean"
  		class="com.example.spring.provider.spring1_5.aop.framework.ProxyFactoryBean">
     	<property name="proxyInterfaces"><value>com.example.spring.provider.spring1_5.beans.ITestBean</value></property>
     	<property name="interceptorNames"><value>simpleBeforeAdviceAdvisor,testBeanTarget</value></property>
	</bean>
	
	<bean id="testAdvisorAdapter" class="com.example.spring.provider.spring1_5.aop.SimpleBeforeAdviceAdapter"/>
	
	<bean id="adapterRegistrationManager" class="com.example.spring.provider.spring1_5.aop.framework.adapter.AdvisorAdapterRegistrationManager"/>

</beans>