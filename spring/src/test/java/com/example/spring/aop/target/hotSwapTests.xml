<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE beans PUBLIC "-//SPRING//DTD BEAN//EN" "http://www.springframework.org/dtd/spring-beans.dtd">

<beans>

	<!-- Simple target -->
	<bean id="target1" class="com.example.spring.provider.spring1_5.aop.interceptor.SideEffectBean">
		<property name="count"><value>10</value></property>
	</bean>

	<bean id="target2" class="com.example.spring.provider.spring1_5.aop.interceptor.SideEffectBean" singleton="true">
		<property name="count"><value>20</value></property>
	</bean>
	
	<!-- 
		Hot swappable target source. Note the use of Type 3 IoC.
	-->
	<bean id="swapper" class="com.example.spring.provider.spring1_5.aop.target.HotSwappableTargetSource">
		<constructor-arg><ref local="target1"/></constructor-arg>
	</bean>

	<bean id="swappable" class="com.example.spring.provider.spring1_5.aop.framework.ProxyFactoryBean">
		<property name="targetSource"><ref local="swapper"/></property>
	</bean>

</beans>		
	