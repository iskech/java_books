<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE beans PUBLIC "-//SPRING//DTD BEAN//EN" "http://www.springframework.org/dtd/spring-beans.dtd">

<beans default-lazy-init="true">

	<bean id="lazy-and-bad"
		class="com.example.spring.provider.spring1_5.beans.factory.xml.XmlBeanFactoryTests$BadInitializer"
		init-method="init2"
	/>

	<bean id="init-and-ib"
		class="com.example.spring.provider.spring1_5.beans.factory.xml.XmlBeanFactoryTests$InitAndIB"
		lazy-init="false"
		init-method="customInit"
		destroy-method="customDestroy"
	/>

	<bean id="prototype" class="com.example.spring.provider.spring1_5.beans.TestBean" singleton="false"/>

</beans>
