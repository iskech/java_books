<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE beans PUBLIC "-//SPRING//DTD BEAN//EN" "http://www.springframework.org/dtd/spring-beans.dtd">

<!--
  - Replicates a failure because of the dependence of prototype and singleton on
  the dao. Involves factory beans.
  -->

<beans>

	<bean id="dataSource" class="org.apache.commons.dbcp.BasicDataSource"/>

	<bean id="transactionManager" class="com.example.spring.provider.spring1_5.jdbc.datasource.DataSourceTransactionManager">
		<property name="dataSource"><ref local="dataSource"/></property>
	</bean>
		
	<bean id="dao" class="com.example.spring.provider.spring1_5.beans.factory.xml.DummyDao" autowire="constructor"/>

	<bean id="boPrototype" autowire="constructor" class="com.example.spring.provider.spring1_5.beans.factory.xml.DummyBoImpl"
		singleton="false"
	/>
	
	<bean id="prototypeTargetSource" class="com.example.spring.provider.spring1_5.aop.target.PrototypeTargetSource">
		<property name="targetBeanName"><value>boPrototype</value></property>
	</bean>

	<bean id="prototypeBenchmark" class="com.example.spring.provider.spring1_5.transaction.interceptor.TransactionProxyFactoryBean">
		<property name="transactionManager"><ref local="transactionManager"/></property>
		<property name="target"><ref local="prototypeTargetSource"/></property>
		<property name="proxyInterfaces"><value>com.example.spring.provider.spring1_5.beans.factory.xml.DummyBo</value></property>
		<property name="transactionAttributes">
			<props>
				<prop key="placeOrder">PROPAGATION_REQUIRED</prop>
			</props>
		</property>
	</bean>

	<bean id="boSingleton" autowire="constructor" class="com.example.spring.provider.spring1_5.beans.factory.xml.DummyBoImpl"/>

</beans>
