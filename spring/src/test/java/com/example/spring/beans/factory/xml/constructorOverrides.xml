<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE beans PUBLIC "-//SPRING//DTD BEAN//EN" "http://www.springframework.org/dtd/spring-beans.dtd">

<beans>

	<bean id="constructorOverrides" 
		class="com.example.spring.provider.spring1_5.beans.factory.xml.ConstructorInjectedOverrides"
		autowire="autodetect">
		
		<!--
			We combine a setter method with constructor
			autowiring
		-->
		<property name="setterString"><value>from property element</value></property>
		
		<lookup-method name="createFactoryMethods" bean="factoryMethods" />		
		
	</bean>
	
	
	<bean id="jenny" class="com.example.spring.provider.spring1_5.beans.TestBean"
		singleton="true">	
		<property name="name"><value>Jenny</value></property>
		<property name="age"><value>30</value></property>
	</bean>
	
	<bean id="factoryMethods" 
		class="com.example.spring.provider.spring1_5.beans.factory.xml.FactoryMethods"
		factory-method="newInstance"
		singleton="false">	
		<constructor-arg index="0"><ref local="jenny"/></constructor-arg>
	</bean>

</beans>
