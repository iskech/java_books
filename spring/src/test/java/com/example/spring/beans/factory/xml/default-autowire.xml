<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE beans PUBLIC "-//SPRING//DTD BEAN//EN" "http://www.springframework.org/dtd/spring-beans.dtd">

<beans default-autowire="byType" default-dependency-check="objects">

	<bean id="rod1" class="com.example.spring.provider.spring1_5.beans.factory.xml.DependenciesBean">
		<!-- Should pick up spouse automatically -->
	</bean>

	<bean id="rod2" class="com.example.spring.provider.spring1_5.beans.factory.xml.DependenciesBean">
		<!-- Should pick up spouse automatically -->
	</bean>

	<bean id="rod3" class="com.example.spring.provider.spring1_5.beans.factory.xml.DependenciesBean" autowire="no">
		<!-- Should not pick up spouse automatically -->
	</bean>

	<bean id="spouse" class="com.example.spring.provider.spring1_5.beans.TestBean" autowire="no" dependency-check="none">
		<property name="name">
			<value>Kerry</value>
		</property>
	</bean>

</beans>
